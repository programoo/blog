<%= form_with(model: movie, local: true, html: { class: "mt-4" }) do |form| %>
  <% if movie.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">
        <%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:
      </h4>
      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter movie title" %>
  </div>
  <div class="mb-3">
    <%= form.label :images, class: "form-label" %>
    <%= form.file_field :images, multiple: true, direct_upload: true, class: "form-control" %>
    <% if movie.images.attached? %>
      <div class="mt-3 d-flex flex-wrap gap-2">
        <% movie.images.each do |image| %>
          <div class="card" style="width: 100px;">
            <%= image_tag image.variant(resize_to_limit: [100, 100]), class: "card-img-top", alt: "Movie Image" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= form.label :images, class: "form-label" %>
    <%= form.file_field :images, multiple: true, direct_upload: true, class: "form-control" %>
    <% if movie.images.attached? %>
      <div class="mt-3 d-flex flex-wrap gap-2">
        <% movie.images.each do |image| %>
          <div class="card" style="width: 100px; position: relative;">
            <%= image_tag image.variant(resize_to_limit: [100, 100]), class: "card-img-top", alt: "Movie Image" %>
            <!-- Add a delete checkbox -->
            <div style="position: absolute; top: 5px; right: 5px;">
              <%= check_box_tag "remove_images[]", image.id %>
              <%= label_tag "remove_images_#{image.id}", "X", class: "text-danger" %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= form.label :content %>
    <%= form.rich_textarea :content %>
  </div>
  <div class="mb-3">
    <%= form.submit class: "btn btn-success" %>
  </div>
<% end %>