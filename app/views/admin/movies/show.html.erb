<div class="container-fluid d-flex justify-content-center align-items-center bg-secondary text-white p-4" style="height: 70vh;">
  <div class="card mb-3" style="max-width: 1024px;">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="<%= Rails.application.routes.url_helpers.rails_blob_url(@movie.images.first, only_path: true) %>" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= @movie.title %></h5>
          <p class="card-text"><%= @movie.description %></p>
          <p class="card-text"><small class="text-muted">สร้างเมื่อ: <%= time_ago_in_words(@movie.updated_at) %></small></p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container my-4">
  <p style="color: green"><%= notice %></p>
  <!-- Comment / Reply Panel -->
  <div class="card">
    <div class="card-body">
      <%= form_with(model: [ @movie, Comment.new ], local: true) do |form| %>
        <div class="mb-3">
          <%= form.text_area :content, class: "form-control", rows: 3, placeholder: "แสดงความคิดเห็นของคุณ..." %>
        </div>
        <%= hidden_field_tag :user_id, current_user&.id %>
        <%= form.submit "Reply", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <!-- Example of existing replies -->
  <div class="mt-3">
    <% @movie.comments.order(created_at: :desc).each do |comment| %>
      <div class="card mb-2">
        <div class="card-body">
          <p class="mb-1"><strong>
              <% if comment.user.present? %>
                <%= comment.user&.email %>
              <% else %>
                guest
              <% end %>
              :</strong> <%= comment.content %></p>
          <div class="d-flex align-items-center">
            <i class="bi bi-clock me-1"></i>
            <span><%= time_ago_in_words(comment.created_at) %></span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div>
  <%= link_to "Edit this movie", edit_movie_path(@movie) %> |
  <%= link_to "Back to movies", movies_path %>
  <%= button_to "Destroy this movie", @movie, method: :delete %>
</div>