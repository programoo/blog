<div style="display: flex; align-items: center; gap: 10px;">
  <%= form_with url: admin_movies_path, method: :get, local: true, html: { style: 'display: flex; align-items: center; gap: 5px;' } do |form| %>
    <%= form.text_field :query, value: params[:query], placeholder: "Search", class: 'form-control' %>
    <%= form.submit "Search", class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'New Movie', new_movie_path, class: 'btn btn-success' %>
</div>
<!-- app/views/movies/index.html.erb -->
<table class="table-auto border-collapse border border-gray-300 w-full">
  <thead>
    <tr>
      <th class="border px-4 py-2">Image</th>
      <th class="border px-4 py-2">Title</th>
      <th class="border px-4 py-2">Description</th>
      <th class="border px-4 py-2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td class="border px-4 py-2">
          <% if movie.images.attached? %>
            <%= image_tag movie.images.first.variant(resize_to_limit: [64, 64]), alt: movie.title %>
          <% else %>
            No Image
          <% end %>
        </td>
        <td class="border px-4 py-2"><%= movie.title %></td>
        <td class="border px-4 py-2"><%= movie.description[0..50] + "..." %></td>
        <td class="border px-4 py-2 flex gap-2">
          <%= link_to 'Edit', edit_admin_movie_path(movie), class: 'btn btn-sm btn-primary' %>
          <%= link_to 'Delete', admin_movie_path(movie),
            data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this movie?' },
            class: 'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
