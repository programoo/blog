<button type="button"
        class="btn btn-secondary"
        id="notificationsPopover"
        data-bs-toggle="popover"
        data-bs-html="true"
        data-bs-placement="left">
  Notifications
</button>
<div id="notifications-content" class="d-none">
  <% @notifications = Notification.where(user: current_user).order(created_at: :desc).limit(10) %>
  <%= render @notifications %>
</div>
<div id="navbar-notifications">
  <a href="/notifications" class="position-relative d-inline-flex align-items-center justify-content-center text-decoration-none">
    <!-- Circular bell button -->
    <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center"
         style="width: 40px; height: 40px;">
      <i class="bi bi-bell-fill text-white fs-5"></i>
    </div>
    <%= render "notifications/count", user: current_user%>
  </a>
</div>