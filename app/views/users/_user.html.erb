<div id="<%= dom_id user %>" class="container mt-4">
  <div class="card shadow-sm border-0">
    <div class="card-body">
      <div class="d-flex align-items-center mb-3">
        <div class="me-3">
          <%= image_tag user.avatar.variant(resize_to_fill: [80, 80]),
              class: "rounded-circle",
              width: 80,
              height: 80,
              alt: "User Avatar" %>
        </div>
        <div>
          <h3 class="mb-1"><%= user.email %></h3>
          <p class="text-muted mb-0"><%= user.email %></p>
        </div>
      </div>
      <hr>
      <h5 class="mb-2">About</h5>
      <p class="text-muted">
        <%= user.email || "This user has not added a bio yet." %>
      </p>
      <hr>
      <div class="d-flex gap-2">
        <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-primary" %>
        <%= link_to "Back", users_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
</div>
