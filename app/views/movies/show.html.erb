<div class="container my-5">
  <div class="row">
    <!-- Left Section: Image + Details -->
    <div class="col-md-6 mb-4">
      <div class="card shadow-sm">
        <img src="movie-poster.jpg" class="card-img-top" alt="Movie Poster">
        <div class="card-body">
          <h5 class="card-title">Movie Title</h5>
          <p class="card-text">Movie description goes here. You can include cast, release date, genre, or review snippet.</p>
        </div>
      </div>
    </div>
    <!-- Right Section: YouTube Video -->
    <div class="col-md-6 mb-4">
      <div class="ratio ratio-16x9">
        <iframe src="https://www.youtube.com/embed/43R9l7EkJwE" 
            title="YouTube video" 
            allowfullscreen>
        </iframe>
      </div>
    </div>
    <div class="card-footer bg-white">
      <%= render "shared/social_panel", movie: @movie %>
    </div>
  </div>
</div>