<%= form_with(model: chapter, data: { turbo: false }) do |form| %>
  <%= hidden_field_tag :movie_id, params[:movie_id] %>
  <% if chapter.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(chapter.errors.count, "error") %> prohibited this chapter from being saved:</h2>
      <ul>
        <% chapter.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :position, style: "display: block" %>
    <%= form.number_field :position, value: chapter.position || 1, disabled: true %>
    <%= form.hidden_field :position, value: chapter.position || 1 %>
  </div>
  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>
  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.textarea :content %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
