<% flash.each do |key, value| %>
  <div class="alert alert-<%= key == 'alert' ? 'danger' : 'success' %> alert-dismissible fade show fixed-top" 
    role="alert"
    data-controller="alert"
    style="z-index: 1100;width: 50%;margin: auto;"
  >
    <%= value %>
    <button 
      type="button" 
      class="btn-close" 
      data-bs-dismiss="alert" 
      aria-label="Close"
      data-action="click->alert#close"
      >
    </button>
  </div>
<% end %>