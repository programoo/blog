<div class="card shadow-sm mb-4" style="max-width: 600px; width: 100%;">
  <!-- Header: Movie Title + Time -->
  <div class="card-body pb-2 d-flex justify-content-between">
    <div>
      <h5 class="mb-1"><%= movie.title %></h5>
      <small class="text-muted">อัพเดทล่าสุด <%= time_ago_in_words(movie.updated_at) %> ที่ผ่านมา</small>
    </div>
  </div>
  <!-- Image -->
  <%= link_to movie_path(movie), data: { turbo: false } do %>
    <div class="w-100" style="height:600px; overflow:hidden;">
      <% if movie.youtube_thumbnail.present? %>
        <%= image_tag movie.youtube_thumbnail,
                      class: "img-fluid rounded-0", alt: "Source Image" %>
      <% elsif movie.images.attached? %>
        <%= image_tag movie.images.first.variant(resize_to_fill: [900, 500]),
                      class: "img-fluid rounded-0", alt: movie.title %>
      <% elsif movie.source_image.present? %>
        <%= image_tag movie.source_image,
                      class: "img-fluid rounded-0", alt: "Source Image" %>
      <% else %>
        <%= image_tag "placeholder.png",
                      class: "img-fluid rounded-0", alt: "No image" %>
      <% end %>
    </div>
  <% end %>
  <!-- Description -->
  <div class="card-body">
    <p class="card-text"><%= simple_format(movie.description) %></p>
  </div>
  <!-- Footer buttons like Facebook -->
  <div class="card-footer bg-white">
    <%= render "shared/social_panel", movie: movie %>
  </div>
</div>
